<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home</title>
    <link rel="stylesheet" href="css/bootstrap.min.css"/>
    <link rel="stylesheet"  href="css/main.css"/>
</head>
<body>
<!-- Nav tabs -->
<div class="container">
    <h2>My Dashboard</h2><hr/>
</div>
<div class="container">
    <ul class="nav nav-tabs tabs" role="tablist">
        <li role="presentation" ><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Items Buying</a></li>
        <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Items Selling</a></li>
    </ul>
<!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="home">
            <div class="row tabs">
               <!-- buying begins -->
                <div class="col-md-2 filterlink">
                    Image
                </div>
                <div class="col-md-2 filterlink c-align">
                    Item Name
                </div>
                <div class="col-md-2 filterlink c-align">
                    Category
                </div>
                <div class="col-md-2 filterlink c-align">
                    Price
                </div>
                <div class="col-md-2 filterlink c-align">
                    .
                </div>
            </div>
            {{#each buying}}
            <br/>
            <div class="row lheight d-block d-sm-none d-xs-none">
                <div class="col-xs-6">
                    <br/>
                    <img src="/images/{{this.Photo}}" width='90%'/>
                </div>
                <div class="col-xs-6 col-sm-6 listitem">
                    {{this.Name}}<br/>
                    {{this.Categories}}<br/>
                    {{this.Price}}<br/><br/>
                    <a href="/messages/checkselling/{{this.Id}}" class="buyNow">See Buyers</a><br/>
                </div>
            </div>
            <div class="row lheight d-none d-md-block d-xs-none d-sm-none">
                <div class="col-md-2 ">
                    <img src="/images/{{this.Photo}}"/>
                </div>
                <div class="col-md-2 c-align listitem">
                    {{this.Name}}
                </div>
                <div class="col-md-2 c-align listitem">
                    {{this.Categories}}
                </div>
                <div class="col-md-2  c-align listitem">
                    {{this.Price}}
                </div>
                <div class="col-md-2  c-align"><br/>
                    <a href="/messages/checkbuying/{{this.Id}}" class="buyNow">Message Seller</a>
                </div>
            </div>
           {{/each}}
        </div>
        <!-- Selling begins -->
        <div role="tabpanel" class="tab-pane" id="profile">
            <div class="row tabs">
                <div class="col-md-2 filterlink">
                    Image
                </div>
                <div class="col-md-2 filterlink c-align">
                    Item Name
                </div>
                <div class="col-md-2 filterlink c-align">
                    Category
                </div>
                <div class="col-md-2 filterlink c-align">
                    Price
                </div>
                <div class="col-md-2 filterlink c-align">
                </div>
                <div class="col-md-2 filterlink c-align">
                    .
                </div>
            </div>
            {{#each selling}}
            <br/>
            <div class="row lheight d-block d-sm-none d-xs-none">
                <div class="col-xs-6">
                    <br/>
                    <img src="/images/{{this.Photo}}" width='90%'/>
                </div>
                <div class="col-xs-6 col-sm-6 listitem">
                    {{this.Name}}<br/>
                    {{this.Categories}}<br/>
                    {{this.Price}}<br/><br/>
                    <a href="/messages/checkselling/{{this.Id}}" class="buyNow">See Buyers</a><br/>
                </div>
            </div>
            <div class="row lheight d-none d-md-block d-xs-none d-sm-none">
                <div class="col-md-2 col-xs-6">
                    <img src="/images/{{this.Photo}}"/>
                </div>
                <div class="col-md-2 c-align listitem">
                    {{this.Name}}
                </div>
                <div class="col-md-2 c-align listitem">
                    {{this.Categories}}
                </div>
                <div class="col-md-2  c-align listitem">
                    {{this.Price}}
                </div>
                <div class="col-md-2  c-align listitem">
                  <a href="/messages/checkselling/{{this.Id}}" class="buyNow">See Buyers</a>
                </div>
                <div class="col-md-2  c-align"><br/>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

</div>
<br/><br/>
<!-- Footer content -->
<div class="container-fluid footer c-align">
    <div class="row-fluid">
        <div class="col-md-12">
            Copyright &copy; GSDS SFSU Project Work, 2019. All rights reserved
        </div>
    </div>
</div>

<script src="js/jquery-1.12.4.min.js" ></script>
<script src="js/bootstrap.min.js" ></script>
</body>
</html>