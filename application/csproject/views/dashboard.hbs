<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home</title>
    <link rel="stylesheet" href="css/bootstrap.min.css"/>
    <link rel="stylesheet"  href="css/main.css"/>
</head>
<body>
<!-- Nav tabs -->
<div class="container">
    <div class="row">
    <h2>My Dashboard</h2><hr/>
    </div>
</div>
<ul class="nav nav-tabs tabs" role="tablist">
    <li role="presentation" ><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Items Selling</a></li>
    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Items Buying</a></li>
</ul>
<!-- Tab panes -->
<div class="tab-content">
        <!-- Selling begins -->
        <div role="tabpanel" class="tab-pane active" id="home">
            <div class="row-fluid tabs" style="height:60px;">
                <div class="col-md-2 filterlink">
                    Image
                </div>
                <div class="col-md-2 filterlink c-align">
                    Item Name
                </div>
                <div class="col-md-2 filterlink c-align">
                    Category
                </div>
                <div class="col-md-2 filterlink c-align">
                    Price
                </div>
                <div class="col-md-2 filterlink c-align">
                </div>
            </div>
            {{#each selling}}
                <div class="container-fluid">
                    <div class="row-fluid lheight">
                        <div class="col-md-2 c-align listitem">
                            <img src="/images/{{this.Photo}}" height="80"/>
                        </div>
                        <div class="col-md-2 c-align listitem">
                            {{this.Name}}
                        </div>
                        <div class="col-md-2 c-align listitem">
                            {{this.Categories}}
                        </div>
                        <div class="col-md-2  c-align listitem">
                            {{this.Price}}
                        </div>
                        <div class="col-md-2  c-align ">
                            <br/><br/>
                            {{#ifStatus this.Status '1'}}
                            <a href="/messages/checkselling/{{this.Id}}" style="margin-top: 50px" class="buyNow">See Buying</a>
                            {{else}}
                            <a  style="margin-top: 50px; background: red;" class="buyNow">Awaiting Approval</a>
                            {{/ifStatus}}
                        </div>
                        <div class="col-md-2  c-align"><br/>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
        <div role="tabpanel" class="tab-pane" id="profile">
            <!-- buying begins -->
            <div class="row-fluid tabs" style="height:60px;">
            <div class="col-md-2 filterlink">
                Image
            </div>
            <div class="col-md-2 filterlink c-align">
                Item Name
            </div>
            <div class="col-md-2 filterlink c-align">
                Category
            </div>
            <div class="col-md-2 filterlink c-align">
                Price
            </div>
                <div class="col-md-2  c-align"><br/>
                </div>
            </div>
            {{#each buying}}
            <div class="container-fluid">
            <div class="row-fluid lheight">
                <div class="col-md-2 ">
                    <img src="/images/{{this.Photo}}" height="80"/>
                </div>
                <div class="col-md-2 c-align listitem">
                    {{this.Name}}
                </div>
                <div class="col-md-2 c-align listitem">
                    {{this.Categories}}
                </div>
                <div class="col-md-2  c-align listitem">
                    {{this.Price}}
                </div>
                <div class="col-md-2  c-align"><br/>
                    <a href="/messages/checkmessage/{{this.Id}}" class="buyNow">See Message</a>
                </div>
                <div class="col-md-2  c-align"><br/>
                </div>
            </div>
            </div>
          {{/each}}
       </div>
</div>
<br/><br/>
<!-- Footer content -->
<div class="container-fluid footer">
    <div class="row-fluid">
        <div class="col-md-12">
            Copyright &copy; GSDS SFSU Project Work, 2019. All rights reserved
        </div>
    </div>
</div>
<script src="js/jquery-1.12.4.min.js" ></script>
<script src="js/bootstrap.min.js" ></script>
</body>
</html>