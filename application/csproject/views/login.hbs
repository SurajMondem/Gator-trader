<div class="container">
    <div class="row ">
        <div class="col-md-12">
            <div class="row menu">
                <div class="col-md-5 l-align box">
                    <form class="form" method="post" action="loggedin">
                        <h1>Login</h1>
                        <p>For return users who already have an account.</p>
                        <input type="text" name="loginusername" id="loginusername" placeholder="Username" required/>
                        <input type="password" name="loginpassword" id="loginusername" placeholder="Password" required/>
                        <input type="submit" name="login" value="Submit" class="gradient_green" required/>
                    </form>
                    <br/><br/><br/><br/>
                </div>
                <div class="col-md-1">
                </div>
                <div class="col-md-5 l-align box">
                    <form class="form" method="post" action="register">
                        <h1>Register</h1>
                        <p>For new users without accounts.</p>
                        <input type="text" name="name" placeholder="Full Name" required/>
                        <input type="text" name="email" placeholder="E-Mail" required/>
                        <input type="text" name="username" placeholder="Username" required/>
                        <input type="password" name="password" placeholder="Password" required/>
                        <div class="form-check" style= "position: absolute; margin-left: -20px">
                            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" style= "position: absolute; margin-left: -63px" required>
                            <label class="form-check-label" for="defaultCheck1" style="margin-top: 15px;" >
                            &nbsp; &nbsp; &nbsp; &nbsp;  &nbsp; &nbsp;I agree to terms
                            </label>
                        </div>
                        <br/><br/></br>
                        <input type="submit" name="register" value="Submit" class="gradient_green" />
                    </form>

                    <br/><br/>
                </div>
            </div>

        </div>
